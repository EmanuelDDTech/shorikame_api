{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "#src/*": ["src/*"],
      "#modules/*": ["src/modules/*"],
      "#config/*": ["src/config/*"],
      "#utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "**/*.js", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
